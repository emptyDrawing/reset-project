<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration
	xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[%-5p] %d{ABSOLUTE} (%c)- %m%n" />
		</layout>
	</appender>

	<!-- 날짜별 로그 파일 생성 -->
	<appender name="dayFile" class="org.apache.log4j.RollingFileAppender">
		<!-- The active file to log to -->
		<param name="file" value="/reset/applogs/weblog.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="Threshold" value="INFO" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d][%p]-%m%n" />
		</layout>
	</appender>
	<!-- 경고로그 -->
	<appender name="errorFile" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="/reset/applogs/errlog.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="Threshold" value="ERROR" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d][%p]-%m($c)%n" />
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="ga.beauty.reset" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="dayFile" />
		<appender-ref ref="errorFile"/>
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>
